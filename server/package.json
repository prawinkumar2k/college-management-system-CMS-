{
  "name": "sf-erp-server",
  "version": "1.0.0",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "cross-env NODE_ENV=production node app.js",
    "start:legacy": "cross-env NODE_ENV=production node server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "test:coverage": "npm test -- --coverage",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "db:migrate": "node migrations/run.js",
    "db:check": "node check-hr-tables.js"
  },
  "keywords": [
    "erp",
    "education",
    "management"
  ],
  "author": "SF-ERP Team",
  "license": "ISC",
  "description": "SF-ERP Backend API Server - Production-grade ERP system",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemon": "^3.1.10",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0"
  }
}
