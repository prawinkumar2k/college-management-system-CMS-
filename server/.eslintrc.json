{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-undef": "off",
        "no-redeclare": "off",
        "no-empty": "off",
        "no-constant-condition": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-inner-declarations": "off",
        "no-useless-escape": "off",
        "no-control-regex": "off"
    }
}